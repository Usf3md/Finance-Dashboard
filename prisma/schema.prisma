generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  Opening   Opening  @relation(fields: [openingId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  openingId Int
  name      String
  email     String
  amount    Int
  type      Boolean
  detail    String
  note      String
  date      DateTime @default(now())
  image     String
}

model Opening {
  id           Int           @id @default(autoincrement())
  date         DateTime      @unique
  balance      Int
  transactions Transaction[]
}
